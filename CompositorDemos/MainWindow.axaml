<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:CompositorDemos.Pages"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="600"
        x:Class="CompositorDemos.MainWindow"
        Width="1200" Height="600" WindowStartupLocation="CenterScreen"
        Title="CompositorDemos">
  <TabControl TabStripPlacement="Top">
    <TabControl.Styles>
      <Style Selector="TabItem">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="(TextElement.FontSize)" Value="12"/>
      </Style>
    </TabControl.Styles>
    <TabItem Header="Vector3KeyFrameAnimation">
      <pages:Vector3KeyFrameAnimationPage />
    </TabItem>
    <TabItem Header="ExpressionAnimation">
      <pages:ExpressionAnimationPage />
    </TabItem>
  </TabControl>
</Window>
