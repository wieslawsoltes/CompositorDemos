<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:CompositorDemos.Pages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompositorDemos.Pages.SlidingAnimationPage">
  <TabControl>
    <TabItem Header="Left">
      <Panel ClipToBounds="True">
        <Border Name="Border1" 
                Background="Blue" 
                pages:Animator.LeftSlidingAnimation="500" />
      </Panel>
    </TabItem>
    <TabItem Header="Right">
      <Panel ClipToBounds="True">
        <Border Name="Border2" 
                Background="Red" 
                pages:Animator.RightSlidingAnimation="500" />
      </Panel>
    </TabItem>
    <TabItem Header="Top">
      <Panel ClipToBounds="True">
        <Border Name="Border3" 
                Background="Green" 
                pages:Animator.TopSlidingAnimation="500" />
      </Panel>
    </TabItem>
    <TabItem Header="Bottom">
      <Panel ClipToBounds="True">
        <Border Name="Border4" 
                Background="Yellow" 
                pages:Animator.BottomSlidingAnimation="500" />
      </Panel>
    </TabItem>
  </TabControl>
</UserControl>

